
@{
    ViewBag.Title = "Login";
}
<link href="~/Common/CSS/Login.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="content-center">
        <div class="container-login">
            <div class="content-center">
                <img src="~/Common/Images/stackoverflow-icon-only.png" style="height: 40px; width: 40px" />
            </div>
            <button type="submit" class="button-google-signup"><img class="logo-signup" src="~/Common/Images/google-logo.png" /> Log in with Google</button>
            <button type="submit" class="button-github-signup"><img class="logo-signup" src="~/Common/Images/github-logo.png" /> Log in with Github</button>
            <button type="submit" class="button-facebook-signup"><img class="logo-signup" src="~/Common/Images/fb-logo.png" /> Log in with Facebook</button>
            <form class="container-form shadow-lg" method="POST" action="/login">
                <div class="form-group">
                    <label for="exampleInputEmail1"><b>Email</b></label>
                    <input type="email" class="form-control" name="Email" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1"><b>Password</b></label>
                    <input type="password" class="form-control" name="Password">
                </div>
                <button type="submit" class="button-signup-inner">Log in</button>
            </form>
            <p class="signup-login">
                Don't have an account? <span style="color:#0077cc">
                    <a class="text-decoration-none" href="/register">
                        Sign up
                    </a>
                </span>
            </p>
        </div>
    </div>
</div>

